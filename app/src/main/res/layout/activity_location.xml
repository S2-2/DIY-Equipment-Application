<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.LocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <!-- 메뉴 액티비티(activity_menu)로 연결 -->
        <ImageButton
            android:id="@+id/location_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <!-- 홈 액티비티(activity_main)로 연결 -->
        <ImageButton
            android:id="@+id/location_btn_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_home_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My Location"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/style_tv_default_black18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 나의 주소" />

        <TextView
            android:id="@+id/location_et_myLocation"
            style="@style/style_tv_default_black18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/style_tv_default_black18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경할 주소" />

        <EditText
            android:id="@+id/location_et_address"
            style="@style/style_tv_default_black18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="주소를 입력해 주세요." />

        <Button
            android:id="@+id/location_btn_update"
            style="@style/style_tv_default_black18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="변경하기" />

    </LinearLayout>
</LinearLayout>