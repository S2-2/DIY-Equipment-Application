<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/chat_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/chat_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/chat_iv"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/chat_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_tv_name"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/chat_iv"
        android:background="@drawable/et_back_otherchatbox"
        android:maxWidth="250dp"
        android:padding="12dp"
        android:text="안녕하세요!"
        style="@style/style_tv_default_black16dp" />
    <TextView
        android:id="@+id/chat_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:59"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/chat_tv_msg"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/chat_tv_msg"/>
</RelativeLayout>