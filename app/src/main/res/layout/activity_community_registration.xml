<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_gravity="center_vertical"
        android:id="@+id/communityRegistration_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/communityRegistration_spr_category"
            android:layout_width="188dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--maxLength는 글자수 제한, ellipsize는 끝에 ...(maxLine도 있음!)-->
    <EditText
        android:id="@+id/communityRegistration_et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목"
        android:maxLength="20"
        android:ellipsize="end"
        android:inputType="text"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/communityRegistration_btn_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <EditText
        android:id="@+id/communityRegistration_et_contents"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:hint="내용을 입력하세요."
        android:gravity="left"
        android:inputType="textImeMultiLine"
        android:textSize="20dp" />


    <Button
        android:id="@+id/communityRegistration_btn_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록하기"
        android:layout_gravity="center"
        android:textSize="20dp" />

</LinearLayout>