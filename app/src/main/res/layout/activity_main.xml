<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    // 상단 드로어 메뉴랑 검색창

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:id="@+id/registrationRecyclerview_btn_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="앱 이름"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/registrationRecyclerview_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요, " />

        <EditText
            android:id="@+id/main_et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(별명)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/main_btn_alarm"
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24"
            tools:layout_editor_absoluteX="346dp"
            tools:layout_editor_absoluteY="121dp" />
    </LinearLayout>

    <!-- 실시간 인기 거래 목록 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="실시간 공구 거래" />

                <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/main_btn_rentalList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </LinearLayout>

            <!-- 리스트뷰는 아직 수정 중 -->
            <ListView
                android:id="@+id/main_lv_rentalLIst"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <!-- 커뮤니티 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티" />

                    <ImageButton
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/main_btn_community"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>

                <!-- 리스트뷰는 아직 수정 중 -->
                <ListView
                    android:id="@+id/main_lv_community"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <!-- 공구 등록
            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIY 등록"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
 -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>