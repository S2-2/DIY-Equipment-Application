<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".DiyMainActivity">

    // 상단 드로어 메뉴랑 검색창

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:id="@+id/registrationRecyclerview_btn_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DIY Equipment Rental"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>

        <ImageButton
            android:id="@+id/registrationRecyclerview_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요, " />

        <EditText
            android:id="@+id/main_et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(별명)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/main_btn_alarm"
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24"
            tools:layout_editor_absoluteX="346dp"
            tools:layout_editor_absoluteY="121dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <!-- 장비 대여 목록 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_imgBtn_rentalList"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="0dp"
                android:scaleType="fitStart"
                android:src="@drawable/diy_equipment_rental_list" />
        </LinearLayout>

        <!-- 장비 대여 구글맵 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_imgBtn_rentalMap"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="0dp"
                android:scaleType="fitStart"
                android:src="@drawable/diy_equipment_rental_map" />
        </LinearLayout>

        <!-- 장비 대여 커뮤니티 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/main_imgBtn_rentalCommunity"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="0dp"
                android:scaleType="fitStart"
                android:src="@drawable/diy_equipment_rental_community" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>