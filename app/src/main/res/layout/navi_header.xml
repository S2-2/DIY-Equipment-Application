<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#72a18a"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/navi_header_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="공구를 공유하는 人"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/navi_header_tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="별명"
            android:textSize="20dp"
            style="@style/style_tv_default_white18dp" />
        <ImageButton
            android:id="@+id/navi_header_btn_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#618D5E"
            android:src="@drawable/ic_baseline_settings_24"/>
    </LinearLayout>

        <TextView
            android:id="@+id/navi_header_tv_userLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:text="사용자 위치"
            style="@style/style_tv_default_white16dp" />

</LinearLayout>