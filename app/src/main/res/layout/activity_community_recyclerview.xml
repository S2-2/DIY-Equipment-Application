<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 커뮤니티 목록 xml -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#BFBFBF"
            android:gravity="center_vertical">

            <ImageButton
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:id="@+id/communityRecyclerview_btn_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_menu_24"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="43dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="앱 이름" />

            <ImageButton
                android:id="@+id/communityRecyclerview_btn_search"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_search_24"
                tools:layout_editor_absoluteX="346dp"
                tools:layout_editor_absoluteY="50dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/communityRecyclerview_btn_back"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="43dp" />

            <ImageButton
                android:id="@+id/communityRecyclerview_btn_home"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_home_24" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/communityRecyclerview_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false" />
    </LinearLayout>

    <!-- 'activity_community_registration'로 연결 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/communityRecyclerview_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#009688"
        android:src="@drawable/ic_baseline_add_24"
        app:fabSize="normal" />
</RelativeLayout>