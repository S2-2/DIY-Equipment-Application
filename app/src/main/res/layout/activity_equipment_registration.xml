<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/equipmentRegistration_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <ImageButton
        android:id="@+id/imgBtn_diyRental"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/equipmentRegistration_tv_nickname"
        style="@style/style_tv_default_black18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="별명" />

    <EditText
        android:id="@+id/equipmentRegistration_et_modelName"
        style="@style/style_tv_default_black18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목을 입력하세요." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_registrationCat1"
            style="@style/style_tv_default_black18dp"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="카테고리1"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spr_registrationCat1"
            style="@style/style_tv_default_black18dp"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_registrationCat2"
            style="@style/style_tv_default_black18dp"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="카테고리2"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spr_registrationCat2"
            style="@style/style_tv_default_black18dp"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_registrationRentalGroup"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rBtn_registrationFeeRental"
            style="@style/style_tv_default_black18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여" />

        <RadioButton
            android:id="@+id/rBtn_registrationFree"
            style="@style/style_tv_default_black18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무료나눔" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_registrationRentalType"
        style="@style/style_tv_default_black18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RentalType" />

    <EditText
        android:id="@+id/et_registrationRentalCost"
        style="@style/style_tv_default_black18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RentalCost"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_registrationRentalAddress"
        style="@style/style_tv_default_black18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RentalAddress"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/et_registrationModelInform"
        style="@style/style_tv_bold_black18dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
        android:hint="대여물품에 대한 설명을 입력해 주세요."
        android:inputType="textImeMultiLine" />

    <!--    <LinearLayout-->
    <!--        android:orientation="horizontal"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content">-->
    <!--        <DatePicker-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:datePickerMode="spinner"-->
    <!--            android:calendarViewShown="false"-->
    <!--            android:layout_weight="1"/>-->
    <!--        <DatePicker-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:datePickerMode="spinner"-->
    <!--            android:calendarViewShown="false"-->
    <!--            android:layout_weight="1"/>-->
    <!--    </LinearLayout>-->

    <Button
        android:id="@+id/equipmentRegistration_btn_registration"
        style="@style/style_tv_default_black18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="등록하기" />

</LinearLayout>