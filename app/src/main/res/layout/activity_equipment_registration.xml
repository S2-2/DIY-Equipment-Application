<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <ImageButton
        android:id="@+id/imgBtn_diyRental"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <EditText
        android:id="@+id/et_registrationEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_registrationModelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ModelName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_registrationModelInform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ModelInform"
        android:inputType="textImeMultiLine"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/rg_registrationRentalGroup"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rBtn_registrationFeeRental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대여"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rBtn_registrationFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무료나눔"
            android:textSize="16dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_registrationRentalType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RentalType"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_registrationRentalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RentalCost"
        android:inputType="number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_registrationRentalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RentalAddress"
        android:inputType="textPostalAddress"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_registrationAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록하기"
        android:textSize="20dp" />

</LinearLayout>