<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageButton
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:id="@+id/signup_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="24dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이용약관"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <CheckBox
                android:id="@+id/signupTerms_cb_termsAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 동의"
                android:textColor="#6A6666"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/signupTerms_cb_terms1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="[필수] 서비스 이용약관"
                android:textColor="#6A6666"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signupTerms_btn_terms1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 보기"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <CheckBox
                android:id="@+id/signupTerms_cb_terms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[필수] 개인정보 처리방침"
                android:textColor="#6A6666"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signupTerms_btn_terms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 보기"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <CheckBox
                android:id="@+id/signupTerms_cb_terms3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[필수] 위치정보 이용약관"
                android:textColor="#6A6666"
                android:textSize="18dp" />

            <Button
                android:id="@+id/signupTerms_btn_terms3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 보기"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/signupTerms_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="다음"
        android:textSize="20dp" />

</LinearLayout>


