<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".front.signIn.auth.RentalDetailActivity">

    <ImageView
        android:id="@+id/iv_rentalImage"
        android:layout_width="415dp"
        android:layout_height="160dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <EditText
        android:id="@+id/ed_userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="userEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rentalImage" />

    <EditText
        android:id="@+id/modelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ModelName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ed_userEmail"
        app:layout_constraintStart_toStartOf="@+id/ed_userEmail"
        app:layout_constraintTop_toBottomOf="@+id/ed_userEmail"/>

    <EditText
        android:id="@+id/modelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ModelText"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/modelName"
        app:layout_constraintStart_toStartOf="@+id/modelName"
        app:layout_constraintTop_toBottomOf="@+id/modelName" />



    <EditText
        android:id="@+id/ed_rgResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="RentalType"
        app:layout_constraintEnd_toEndOf="@+id/modelText"
        app:layout_constraintStart_toStartOf="@+id/modelText"
        app:layout_constraintTop_toBottomOf="@+id/modelText"/>

    <EditText
        android:id="@+id/ed_rentalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="RentalCost"
        app:layout_constraintEnd_toEndOf="@+id/ed_rgResult"
        app:layout_constraintStart_toStartOf="@+id/ed_rgResult"
        app:layout_constraintTop_toBottomOf="@+id/ed_rgResult"/>

    <EditText
        android:id="@+id/ed_rentalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="RentalAddress"
        app:layout_constraintEnd_toEndOf="@+id/ed_rentalCost"
        app:layout_constraintStart_toStartOf="@+id/ed_rentalCost"
        app:layout_constraintTop_toBottomOf="@+id/ed_rentalCost"/>

    <Button
        android:id="@+id/btn_checkOK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="311dp"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ed_rentalAddress"
        app:layout_constraintTop_toBottomOf="@+id/ed_rentalAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>


