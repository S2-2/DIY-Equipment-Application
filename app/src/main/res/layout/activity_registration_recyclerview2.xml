<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 장비 거래 목록 xml -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 메뉴 네비게이션드로어 기능 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/toolbar"
                    android:background="@android:color/black" />

                <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/title" />

                </androidx.appcompat.widget.Toolbar>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/registrationRecyclerview_btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

                <ImageButton
                    android:id="@+id/registrationRecyclerview_btn_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_baseline_home_24" />

                <EditText
                    android:id="@+id/communityRecyclerview_et_search"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:hint="검색어를 입력하세요."
                    android:textSize="18dp" />

                <fragment
                    android:id="@+id/registrationRecyclerviewItem_sort_spr"
                    class="kr.ac.kpu.diyequipmentapplication.equipment.EquipmentSortFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></fragment>

            </LinearLayout>

            <!--카테고리 필터링 버튼-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <Button
                        style="@style/style_tv_default_black14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="산업안전용품" />

                    <Button
                        style="@style/style_tv_default_black14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="DIY/전기, 산업자재" />

                    <Button
                        style="@style/style_tv_default_black14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="건전지/충전지" />

                    <Button
                        style="@style/style_tv_default_black14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="작업공구" />

                    <Button
                        style="@style/style_tv_default_black14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="전동/엔진/기계" />
                </LinearLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/communityRecyclerview_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clipToPadding="false"
                android:scrollbarFadeDuration="0"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- 'activity_equipment_registration'로 연결 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/registrationRecyclerview_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#009688"
            android:src="@drawable/ic_baseline_add_24"
            app:fabSize="normal" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu" />
</androidx.drawerlayout.widget.DrawerLayout>